# FastAPI 环境配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=永续合约回测系统
APP_VERSION=2.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///回测结果.db

# 安全配置
SECRET_KEY=your-super-secret-key-change-in-production-environment
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 回测配置
MAX_CONCURRENT_BACKTESTS=2
BACKTEST_TIMEOUT=300

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=fastapi_backend.log

# 数据文件路径（相对于项目根目录）
DATA_FILE=K线data/ETHUSDT_1m_2019-11-01_to_2025-06-15.h5
BACKTEST_ENGINE=backtest_kline_trajectory.py
CACHE_DIR=cache
